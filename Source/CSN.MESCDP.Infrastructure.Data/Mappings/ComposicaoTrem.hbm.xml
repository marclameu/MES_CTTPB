    <bag name="PesagemVagaoLista" inverse="true" cascade="save-update" lazy="true" >
      <key on-delete="cascade">
        <column name="CD_VCLO" />
        <column name="ID_TREM" />
      </key>
      <one-to-many class="PesagemVagao" />
